  }
  Buttons(String leftText, String rightText){
    this->leftText = leftText;
    this->rightText = rightText;
  }
  draw(){
    // TODO
    display.clearDisplay();
    display.drawFastHLine(0, 55, 128, 1);// drawFastHLine(int16_t x, int16_t y, int16_t w, uint16_t color);
